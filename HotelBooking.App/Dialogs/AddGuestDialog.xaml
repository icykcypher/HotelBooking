<Window x:Class="HotelBooking.App.Dialogs.AddGuestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Guest" Height="206" Width="385">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="First Name:" Grid.Row="0"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="0" Margin="120,0,0,5"/>

        <Label Content="Last Name:" Grid.Row="1"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="1" Margin="120,0,0,5"/>

        <Label Content="Email:" Grid.Row="2"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="2" Margin="120,0,0,5"/>

        <Label Content="Phone Number:" Grid.Row="3"/>
        <TextBox x:Name="PhoneNumberTextBox" Grid.Row="3" Margin="120,0,0,5"/>

        <Label Content="Birth Date:" Grid.Row="4"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="4" Margin="120,0,0,5"/>

        <Button x:Name="AddButton" Content="Add Guest" Grid.Row="5" Margin="0,10,0,0"
                HorizontalAlignment="Center" Click="AddButton_Click"/>
    </Grid>
</Window>