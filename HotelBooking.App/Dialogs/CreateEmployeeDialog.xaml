<Window x:Class="HotelBooking.App.CreateEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Employee" Height="248" Width="402">
    <Grid Margin="0,0,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="First Name:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,0,0,0" FontSize="22"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="0" Margin="123,10,-97,10" FontSize="22" Grid.ColumnSpan="2"/>

        <Label Content="Last Name:" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6,0,0,0" FontSize="22"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="1" Margin="123,10,-97,10" FontSize="22" Grid.ColumnSpan="2"/>

        <Label Content="Title:" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" FontSize="22"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="2" Margin="123,10,-97,10" FontSize="22" Grid.ColumnSpan="2"/>

        <Button x:Name="CreateButton" Content="Create Employee" Grid.Row="4" Margin="105,23,0,-3" HorizontalAlignment="Left" Width="175" Click="CreateButton_Click" FontSize="22" Grid.ColumnSpan="2"/>
    </Grid>
</Window>