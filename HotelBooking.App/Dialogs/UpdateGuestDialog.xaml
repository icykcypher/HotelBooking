<Window x:Class="HotelBooking.App.Dialogs.UpdateGuestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Guest" Height="213" Width="228">
    <Grid Margin="0,0,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Guest ID:"/>
        <TextBox x:Name="GuestIdTextBox" Grid.Row="0" Grid.ColumnSpan="2" Margin="93,0,-25,2"/>

        <Label Content="First Name:" Grid.Row="1"/>
        <TextBox x:Name="FirstNameTextBox" Grid.ColumnSpan="2" Margin="93,1,-25,1" Grid.Row="1"/>

        <Label Content="Last Name:" Grid.Row="2"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="2" Grid.ColumnSpan="2" Margin="93,1,-25,1"/>

        <Label Content="Email:" Grid.Row="3"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="3" Grid.ColumnSpan="2" Margin="93,1,-25,1"/>

        <Label Content="Phone Number:" Grid.Row="4"/>
        <TextBox x:Name="PhoneNumberTextBox" Grid.Row="4" Grid.ColumnSpan="2" Margin="93,1,-25,1"/>

        <Label Content="Birth Date:" Grid.Row="5"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="5" Margin="93,2,1,3"/>

        <Button x:Name="UpdateButton" Content="Update Guest" Grid.Row="5" Click="UpdateButton_Click" Margin="68,34,35,-34"/>
    </Grid>
</Window>