<Window x:Class="HotelBooking.App.Dialogs.UpdateEmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelBooking.App.Dialogs"
        mc:Ignorable="d"
        Title="UpdateEmployeeDialog" Height="305" Width="417">
    <Grid Margin="0,0,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Employee's id:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,0,0,0" FontSize="22"/>
        <TextBox x:Name="EmployeeId" Grid.Row="0" Margin="158,10,-97,10" FontSize="22" Grid.ColumnSpan="2"/>

        <Label Content="First Name:" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,0,0,0" FontSize="22"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="1" Margin="158,10,-97,10" FontSize="22" Grid.ColumnSpan="2"/>

        <Label Content="Last Name:" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6,0,0,0" FontSize="22"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="2" Margin="158,10,-97,10" FontSize="22" Grid.ColumnSpan="2"/>

        <Label Content="Title:" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" FontSize="22"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="3" Margin="158,10,-97,10" FontSize="22" Grid.ColumnSpan="2"/>

        <Button x:Name="UpdateButton" Content="Update Employee" Grid.Row="4" Margin="105,23,0,-3" HorizontalAlignment="Left" Width="175" Click="CreateButton_Click" FontSize="22" Grid.ColumnSpan="2"/>
    </Grid>
</Window>